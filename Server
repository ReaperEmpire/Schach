import socket
import threading

HEADER = 64
PORT = 5050
SERVER = socket.gethostbyname(socket.gethostname())
ADRESSE = (SERVER, PORT)
FORMAT = 'utf-8'
GETRENNT_NACHRICHT = "!GETRENNT"

server = socket.socket(socket.AF_INET, socket.SOCK_STREAM)
server.bind(ADRESSE)

def handle_client(verbindung, adresse):
    print(f"[NEUE VERBINDUNG] {adresse} verbunden.")

    verbunden = True
    while verbunden:
        nachricht_length = verbindung.rcev(HEADER).decode(FORMAT)
        if nachricht_length:
            nachricht_length = int(nachricht_length)
            nachricht = verbindung.rcev(nachricht_length).decode(FORMAT)
            if nachricht == GETRENNT_NACHRICHT:
                verbunden = False

            print(f"[{adresse}] {nachricht}")

    verbunden.close()


def start():
    server.listen()
    print(f"[HÖRT ZU] Server ist am zuhöhren auf {SERVER}")
    while True:
        verbindung, adresse = server.accept()
        thread = threading.Thread(target=handle_client, args=(verbindung, adresse))
        thread.start()
        print(f"[AKTIVE VERBINDUNGEN] {threading.active_count() - 1}")


print("[START] Server ist am starten")
start()

